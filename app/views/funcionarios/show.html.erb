</ul>
<div class="section-menu">
<h3>Visitas</h3>

<table class="table table-striped table-bordered table-condensed">
  <tr>
    <th>id</th>
    <th>Empresa</th>
    <th>Data hora inicio</th>
    <th>Data hora fim</th>
    <th>Latitude</th>
    <th>Longitude</th>
    <th></th>
  </tr>

<% @funcionario.visitum.each do |visitum| %>
  <tr>
    <td><%= visitum.id %></td>
    <td><%= link_to visitum.empresa.nome_fantasia,  visitum.empresa%></td>
    <td><%= visitum.data_hora_inicio %></td>
    <td><%= visitum.data_hora_fim %></td>
    <td><%= visitum.latitude %></td>
    <td><%= visitum.longitude %></td>
    <td>
        <%= content_tag :i, (link_to ' Exibir', visitum), :class => " icon-th-large" %> 
        <!-- 
        <%= content_tag :i, (link_to ' Editar', edit_visitum_path(visitum)), :class => "icon-remove" %> 
        <%= content_tag :i, (link_to ' Desligar', visitum, method: :delete, data: { confirm: 'Are you sure?' }), :class => "icon-remove-sign" %>
         -->
    </td>
  </tr>
<% end %>
</table>
</div>

<p id="notice"><%= notice %></p>
