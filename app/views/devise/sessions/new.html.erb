<div class="div-login well">
	<h2>Login</h2>
	<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
	  <div>
	  <%= f.text_field :nome, :autofocus => true, :placeholder => "Entre com id" %></div>

	  <div>
	  <%= f.password_field :password, :placeholder => "senha" %></div>

<!-- 	  <% if devise_mapping.rememberable? -%>
	    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
	  <% end -%> -->

	  <div><%= f.submit "Entrar",:class => "btn btn-primary"%></div>
	<% end %>

	<%= render "devise/shared/links" %>
</div>
